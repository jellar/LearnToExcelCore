@model LearnToExcel.Core.Models.AdmissionViewModels.StudentRegistration
@{
    ViewData["Title"] = "New Admissions";
    ViewData.AddActivePage(NavPages.NewAdmissions);
}
<section class="content-header">
    <h1>New Admissions</h1>
    <br/>
    <form method="post" asp-controller="Admission" asp-action="NewAdmissions">
        <div class="row">
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Student Details</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="form-horizontal">
                        <div class="box-body">
                           <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="FirstName"></label>
                               <div class="col-sm-6">
                                   <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
                                   <span asp-validation-for="FirstName" class="text-danger"></span>
                               </div>
                              
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Surname"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Surname" asp-for="Surname">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="DateofBirth"></label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" asp-for="DateofBirth">
                                    <span asp-validation-for="DateofBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Gender"></label>
                                <div class="col-sm-3">
                                    <select class="form-control" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                                        <option selected="selected" value="">Please select</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="box-header with-border">
                                <h3 class="box-title">Parent Details</h3>
                            </div><br/>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Parent.Title"></label>
                                <div class="col-sm-3">
                                    <select class="form-control select2" asp-for="Parent.Title" asp-items="Html.GetEnumSelectList<Title>()">
                                        <option selected="selected" value="">Please select</option>
                                    </select>
                                    <span asp-validation-for="Parent.Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Parent.FirstName"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="First Name" asp-for="Parent.FirstName">
                                    <span asp-validation-for="Parent.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Parent.Surname"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Surname" asp-for="Parent.Surname">
                                    <span asp-validation-for="Parent.Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Parent.Address"></label>
                                <div class="col-sm-6">
                                    <textarea type="text" class="form-control" asp-for="Parent.Address" rows="5"></textarea>
                                    <span asp-validation-for="Parent.Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Parent.PostalCode"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Post Code" asp-for="Parent.PostalCode">
                                    <span asp-validation-for="Parent.PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="PrimaryContact"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Mother's phone" asp-for="PrimaryContact">
                                    <span asp-validation-for="PrimaryContact" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="SecondaContact"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Father's phone" asp-for="SecondaContact">
                                    <span asp-validation-for="SecondaContact" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="ParentsEmail"></label>
                                <div class="col-sm-6">
                                    <input type="email" class="form-control" placeholder="Parent Email" asp-for="ParentsEmail">
                                    <span asp-validation-for="ParentsEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="SchoolName"></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="School Name" asp-for="SchoolName">
                                    <span asp-validation-for="SchoolName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="YearAtSchool"></label>
                                <div class="col-sm-6">
                                    <input type="number" class="form-control" placeholder="Year at School" asp-for="YearAtSchool">
                                    <span asp-validation-for="YearAtSchool" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="PaymentDay"></label>
                                <div class="col-sm-6">
                                    <input type="number" class="form-control" placeholder="Monthly payment day" asp-for="PaymentDay">
                                    <span asp-validation-for="PaymentDay" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="btn-box-tool pull-right">
                                <a class="btn btn-default">Cancel</a> &nbsp;
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </form>
</section>
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(function () {
            //Date picker
            $('#DateofBirth').datepicker({
                autoclose: true
            });
            //select2
            $('.select2').select2();
        });

    </script>
}
