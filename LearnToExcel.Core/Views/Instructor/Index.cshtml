@model LearnToExcel.Core.Models.InstructorViewModels.InstructorIndexData
@{
    ViewBag.Title = "Instructors";

}
<section class="content-header">
    <h1>Instructors</h1>
    <br /> 
    <div class="box">
      
    <!-- /.box-header -->
        <div class="box-body">
            <p>
                <a asp-controller="Instructor" asp-action="Create">Create New Instructor</a>
                
            </p>
            
            <table class="table table-bordered">
                <tr>
                    <th>Id</th>
                    <th>Surname</th>
                    <th>First Name</th>
                    <th>Start Date</th>
                    <th>Email</th>
                    <th>Courses</th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Instructors)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HireDate)
                        </td>
                        <td>@item.Email</td>
                        <td>
                            @{
                                foreach (var course in Model.CourseInstructors.Where(i => i.InstructorId == item.Id))
                                {
                                    @course.CourseId
                                    @: @course.Course.Title <br/>
                                }
                            }
                        </td>

                        <td>
                            @Html.ActionLink("Select", "Index", new {id = item.Id}) |
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
    
</section>
